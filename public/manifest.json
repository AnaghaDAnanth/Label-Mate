{
    "manifest_version": 3,
    "name": "My React Chrome Extension",
    "version": "1.0",
    "description": "A cool extension built with React + Tailwind",
    "action": {
      "default_popup": "index.html",
      "default_icon": "logo.png"
    },
    "permissions": ["tabs", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  }
  